@page
@model ERP_System.Pages.Student.StudentRegModel
@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<style>
    /* Full-screen background video */
    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1; /* Keeps the video behind the form */
    }

    /* Ensures the container occupies the full screen */
    .vh-100 {
        position: relative;
        height: 100vh;
        overflow: hidden;
    }

    /* Styling for the form section */
     .form-section {
        background-color: rgba(255, 255, 255, 0.4); 
        border-radius: 1rem; /* Rounded corners */
        padding: 2rem;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .card {
        border: none;
    }

    .text-muted {
        color: #6c757d !important;
    }
</style>

<section class="vh-100" >
    <div class="container py-5 h-100">
        <div class="row  justify-content-center align-items-center h-100">
            <div class="col-md-6 col-lg-4  form-section" style="background-color: rgba(255, 255, 255, 0.2); border-radius: 1rem;">
                <h3 class="text-center mb-4">Student Login</h3>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="students.reg_no" class="form-label">Registration Number</label>
                        <input asp-for="students.reg_no" type="text" class="form-control" placeholder="Enter your registration number" style=" background-color: rgba(255, 255, 255, 0.3); ">
                    </div>
                    <div class="mb-3">
                        <label asp-for="students.pass" class="form-label">Password</label>
                        <input asp-for="students.pass" type="password" class="form-control" placeholder="Enter your password" style=" background-color: rgba(255, 255, 255, 0.3); ">
                    </div>
                    <div class="text-center mb-3">
                        <button type="submit" class="btn btn-danger btn-block w-100">Login</button>
                    </div>
                    <div class="text-center">
                        <a href="#!" class="small text-muted">Forgot password?</a>
                    </div>
                </form>
            </div>

            </div>

        </div>
    </div>

    <!-- Background Video -->
    <video autoplay loop muted class="video-background">
        <source src="@Url.Content("~/Images/Videos/video.mp4")" type="video/mp4">
    </video>
</section>
