@page
@model ERP_System.Pages.Student.StudentRegModel
@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .form-section {
        border-radius: 0 1rem 1rem 0;
    }

    .image-section img {
        border-radius: 1rem 0 0 1rem;
        object-fit: cover;
        height: 100%;
    }
</style>
<section class="vh-100" style="background-color: #f5f5f5;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card">
                    <div class="row g-0">
                       
                        <div class="col-md-6 image-section d-none d-md-block">
                            <img src="~/Images/img/education.jpg" alt="Login Image" class="img-fluid">
                        </div>
                    
                        <div class="col-md-6 p-5 form-section" style="background-color:whitesmoke;">
                            <h3 class="text-center mb-4">Student Login</h3>
                            <form method="post">
                                <div class="mb-3">
                                    <label asp-for="students.reg_no" class="form-label">Registration Number</label>
                                    <input asp-for="students.reg_no" type="text" class="form-control" placeholder="Enter your registration number">
                                </div>
                                <div class="mb-3">
                                    <label asp-for="students.pass" class="form-label">Password</label>
                                    <input asp-for="students.pass" type="password" class="form-control" placeholder="Enter your password">
                                </div>
                                <div class="text-center mb-3">
                                    <button type="submit" class="btn btn-primary btn-block w-100">Login</button>
                                </div>
                                <div class="text-center">
                                    <a href="#!" class="small text-muted">Forgot password?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

