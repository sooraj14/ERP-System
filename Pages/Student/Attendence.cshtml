@page
@model ERP_System.Pages.Student.AttendenceModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toggleable Details Box</title>
    <style>
.toggle-box {
    width: 500px;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
    margin: 10px auto;
    cursor: pointer;
    text-align: center;
    color:white;
    background-color: #011936;
}


.details {
    display: none;
    padding: 10px;
    border-top: 1px solid #ccc;
    margin-top: 10px;
    background-color: #f1f1f1;
}

.toggle-box:hover {
            color: #011936;
            background-color:white;
        }
.toggle-box.open {
    background-color: #e9f7f6;
}
</style>
</head>
<body>
    @{
  
        
        foreach(var at in Model.sub)
        {
            <div class="toggle-box" onclick="toggleDetails(this)" style="padding:20px;margin-top:50px;box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);  ">
                    @at.sub_name
                    <div class="details">
                    <div class="container" style="display: flex; justify-content: space-between; gap: 20px; margin-top: 2rem; max-height: 400px; overflow: hidden;">
                    <div style="width: 45%; overflow-y: auto;">
                        <table class="table" style="width: 100%;">
                            <thead class="table-dark">
                                <tr>
                                    <td>Date</td>
                                    <td>Attendence</td>
                                </tr>
                            </thead>
                            <tbody>

                                    @if (at.is_active == true)
                                    {
                                        <tr>
                                            <td>@at.date</td>
                                            <td>P</td>
                                            
                                        </tr>
                                    }   
                           
                            </tbody>
                        </table>
                    </div>
                    <div style="width: 45%; overflow-y: auto;">
                        <table class="table" style="width: 100%;">
                            <thead class="table-dark">
                                <tr>
                                    <td>Date</td>
                                    <td>Attendence</td>
                                </tr>
                            </thead>
                            <tbody>
                                  
                                        @if (at.is_active == false)
                                        {
                                        <tr>
                                            <td>@at.date</td>
                                            <td>A</td>
                                        </tr>
                                        }
                                  
                            </tbody>
                        </table>
                    </div>
                 </div>
                 </div>
            </div>
        }

    }
    

<script>
function toggleDetails(element) {
    const details = element.querySelector('.details');
    const isOpen = details.style.display === 'block';
    details.style.display = isOpen ? 'none' : 'block';
    element.classList.toggle('open', !isOpen);
}
</script>
</body>
</html>
