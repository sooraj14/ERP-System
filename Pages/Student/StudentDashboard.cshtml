@page
@model ERP_System.Pages.Student.StudentDashboardModel
@{
    ViewData["sname"] = Model.sname;
    ViewData["collegename"] = Model.collegename;
}
<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <img style="width:20px;height:20px;" src="~/Images/img/notification.png" /> Notification
   
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Notice</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.Notices.Any())
                {
                    <div class="list-group">
                        @foreach (var notice in Model.Notices)
                        {
                            <div class="list-group-item list-group-item-action border-0 px-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <p class="mb-1">@notice.notice_Data</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        No recent notices
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                
            </div>
        </div>
    </div>
</div>


@{
    foreach (var st in Model.user)
    {
        <div class="card mb-3" style="max-width: 900px; margin: 10rem auto; border-radius: 15px; overflow: hidden; box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);">
            <div class="row g-0" >
                <div class="col-md-4">
                    <img src="~/Images/img/card.jpg" class="img-fluid" style="height: 100%; object-fit: cover; border-radius: 15px 0 0 15px;" alt="User image">
                </div>
                <div class="col-md-8">
                    <div class="card-body p-4">
                        <h5 class="card-title text-center mb-3">Student Details</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><b>USN:</b> @st.reg_number</li>
                            <li class="list-group-item"><b>NAME:</b> @st.name</li>
                            <li class="list-group-item"><b>BRANCH:</b> @st.branch</li>
                            <li class="list-group-item"><b>SEMESTER:</b> @st.sem</li>
                            <li class="list-group-item"><b>CONTACT:</b> @st.contact</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    }
}
<style>
    .card {
    max-width: 900px;
    margin: 10rem auto;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
   
}

.card-body {
    background-color: #f7f7f7; /* Light grey background for the card body */
    padding: 2rem; /* Increased padding for a more spacious look */
}

.card-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
}

.list-group-item {
    background-color: #fff; /* White background for each list item */
    border: none;
    padding: 1.5rem;
    font-size: 1rem;
    color: #555;
}

.list-group-item b {
    color: #007bff; /* Highlighted labels */
}

.card img {
    border-radius: 15px 0 0 15px; /* Rounded corners for the image */
    object-fit: cover;
}


    
    .card img {
        border-radius: 10px;
    }

    .card-body {
        padding: 1.5rem;
    }
}

</style>








