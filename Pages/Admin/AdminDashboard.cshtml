@page
@model ERP_System.Pages.Admin.AdminDashboardModel
@{
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
           
            $("#studentSelect").change(function () {
                if ($(this).val() === "add-students") {
                    $("#form-container-student").show();
                    $("#form-container-teacher").hide();
                } else {
                    $("#form-container-student").hide();
                }
            });

            $("#teacherselect").change(function() {
                if ($(this).val() === "add-teacher") {
                    $("#form-container-teacher").show();
                    $("#form-container-student").hide();
                
                }
                else {
                    $("#form-container-teacher").hide();
                }

            })

            $("#addbranch").change(function () {
                if ($(this).val() === "add-branch") {
                    $("#form-container-branch").show();
                    $("#form-container-student").hide();
                    $("#form-container-teacher").hide();
                
                }
                else {
                    $("#form-container-branch").hide();
                }

            })
            $("#streamselect").change(function() {
                var streamstored = ($(this).val());
                $("#hiddeninput").val(streamstored);
            })
           
            
        });
    </script>   
</head>

<body style="background-color: #f8f9fa; width:1500px; padding-right:200px">
    <div class="d-flex">
        <nav class="bg-dark text-white flex-shrink-0 p-0" style="width: 250px; height: 100vh; margin-left:0px;">
            <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-cogs me-2"></i>
                <span class="fs-4">Admin Dashboard</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <select class="form-select" id="studentSelect" style="width: 250px; margin: 10px 0;">
                        <option value="" disabled selected>STUDENTS</option>
                        <option value="add-students">Add Student</option>
                        <option value="view-students">View Students</option>
                    </select>
                </li>
                <li>
                    <select class="form-select" id="teacherselect" style="width:250px; margin : 10px 0;">
                        <option value="" disabled selected>TEACHER</option>
                        <option value="add-teacher">Add Teacher</option>
                        <option value="view-teacher">View Teacher</option>
                    </select>
                </li>
               

                <li>
                    <a href="/Admin/AccademicStructure" class="nav-link text-white">
                        <i class="fas fa-chart-line me-2"></i> Create Education Structure
                    </a>
                </li>
                <!-- Other Sidebar Items... -->
            </ul>
            <hr>
            <div class="text-center">
                <p>&copy; 2024 Admin</p>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div style="margin-left: 250px; width:100%; padding: 20px;">
            <div id="form-container-student" style="display: none;">
                <form method="post">
                 

                    <div class="mb-3">
                        <label asp-for="stu.student_name" class="form-label">Student Name</label>
                        <input asp-for="stu.student_name" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

                     <div class="mb-3">
                        <label asp-for="stu.reg_num" class="form-label">Reg-No</label>
                        <input asp-for="stu.reg_num" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

                     <div class="mb-3">
                        <label asp-for="stu.contact_no" class="form-label">Contact-No</label>
                        <input asp-for="stu.contact_no" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

                     <div class="mb-3">
                        <label asp-for="stu.contact_email" class="form-label">Contact -Email</label>
                        <input asp-for="stu.contact_email" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>


                     <div class="mb-3">
                        <label asp-for="stu.sem_id" class="form-label">Semester</label>
                        <input asp-for="stu.sem_id" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

                     <div class="mb-3">
                        <label asp-for="stu.password" class="form-label">Password</label>
                        <input asp-for="stu.password" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

                     <div class="mb-3">
                        <label asp-for="stu.address" class="form-label">Address</label>
                        <input asp-for="stu.address" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>

   

                    
                        <select class="form-select" id="streamselect" name="stream_id" style="width:900px; margin : 10px 0;">
                            <option value="" disabled selected>Select-Branch</option>
                            @foreach (var s in Model.streamofstudent)
                            {
                                <option value="@s.stream_id">@s.stream_name</option>
                            }

                        </select>
                  
                    <input type="hidden" name="stream_id" id="hiddeninput" />
                    

                    <div>
                        @foreach (var admin in Model.clgadmins)
                        {
                            <label asp-for="td.college_id" class="form-label">College-Id</label>
                            <input type="text" style="width:900px;" class="form-control" value=" @admin.college_id" disabled />

                        }


                    </div>


                   


                    

                     <div class="mb-3">
                        <label asp-for="stu.joining_date" class="form-label">Joining_Date</label>
                        <input asp-for="stu.joining_date" class="form-control">
                      @*   <span asp-validation-for=""></span> *@
                    </div>
                    @foreach (var s in Model.streamofstudent)
                    {
                        <input type="hidden" name="StreamId" value="@s.stream_id" />
                       
                    }
                    <button type="submit" asp-page-handler="StudentDetails" class="btn btn-success">Submit</button>
                </form>
            </div>
       
                                        @*-----------------------end of Student------------------------------*@

            <div id="form-container-teacher" style="display: none;">
                <form method="post">


                    <div class="mb-3">
                        <label asp-for="td.fac_name" class="form-label">Teacher-Name</label>
                        <input asp-for="td.fac_name" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>

                    <div class="mb-3">
                        <label asp-for="td.fac_email" class="form-label">Email</label>
                        <input asp-for="td.fac_email" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>
                   
                    <div class="mb-3">
                        <label asp-for="td.fac_password" class="form-label">Password</label>
                        <input asp-for="td.fac_password" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>

                    <div class="mb-3">
                        <label asp-for="td.fac_phone" class="form-label">Contact Phone</label>
                        <input asp-for="td.fac_phone" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>


                    <div class="mb-3">
                        <label asp-for="td.fac_address" class="form-label">Address</label>
                        <input asp-for="td.fac_address" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>

                    <div class="mb-3">
                        <label asp-for="td.qualification" class="form-label">Qualification</label>
                        <input asp-for="td.qualification" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>

                    <div class="mb-3">
                        <label asp-for="td.experience" class="form-label">Experience</label>
                        <input asp-for="td.experience" class="form-control">
                        @*   <span asp-validation-for=""></span> *@
                    </div>

                  
                                 <div>
                                   @foreach (var admin in Model.clgadmins)
                                   {    
                                        <label asp-for="td.college_id" class="form-label">College-Id</label>
                            <input type="text" style="width:900px;" class="form-control" value=" @admin.college_id" disabled />
                                    }
                                   </div>

                    <button type="submit" asp-page-handler="TeacherDetails" class="btn btn-success">Submit</button>
                </form>
            </div>
           
        </div>
    </div>
</body>
    