@page
@model ERP_System.Pages.Admin.TeacherModel
@{
    Layout = "_AdminLayout";
}
<head>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="~/css/site.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa;">


     <nav class="top-navbar">

        <div class="nav-item" style="padding: 5px; border: 2px solid #000; border-radius: 8px; width: fit-content; background-color: #f8f9fa;">
                    <select class="form-select custom-select-arrow btn btn-light text-primary" id="teacherselect">
                        Teachers
                        <option class="text-primary" value="" disabled selected>TEACHER</option>
                <option class="text-primary" value="add-teacher">Add Teacher</option>
                <option class="text-primary" value="view-teacher">View Teacher</option>
                    </select>
                </div>
     </nav>



     <div>Hi hiw are you</div>
     

  <div style=" width:500px; margin-left:400px;">
    <div id="form-container-teacher">
        <form method="post" style="box-shadow: 2px 2px 20px black" class="border border-dark p-3">
            <div class="mb-3">
                    @* <label asp-for="td.fac_name" class="form-label text-secondary fw-bolder">Teacher-Name</label> *@
                <input asp-for="td.fac_name" class="form-control" placeholder="Enter Teacher Name">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <div class="mb-3">
@*                     <label asp-for="td.fac_email" class="form-label text-secondary fw-bolder">Email</label>
 *@                    <input asp-for="td.fac_email" class="form-control" placeholder="Enter Emial-Id">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <div class="mb-3">
@*                     <label asp-for="td.fac_password" class="form-label text-secondary fw-bolder">Password</label>
 *@                <input asp-for="td.fac_password" class="form-control" placeholder="Enter Password">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <div class="mb-3">
@*                     <label asp-for="td.fac_phone" class="form-label text-secondary fw-bolder">Contact Phone</label>
 *@                <input asp-for="td.fac_phone" class="form-control" placeholder="Enter Contact No">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <select class="form-select" id="streamselect" name="stream_id" style="width:470px; margin : 10px 0;">
                <option value="" disabled selected>Select-Branch</option>
                @foreach (var s in Model.streamofclgs)
                {
                        <option class="text-info fw-bolder" value="@s.stream_id">@s.stream_name</option>
                }

            </select>


            <div class="mb-3">
@*                     <label asp-for="td.fac_address" class="form-label text-secondary fw-bolder">Address</label>
 *@                <input asp-for="td.fac_address" class="form-control" placeholder="Enter Address">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <div class="mb-3">
@*                     <label asp-for="td.qualification" class="form-label text-secondary fw-bolder  ">Qualification</label>
 *@                <input asp-for="td.qualification" class="form-control" placeholder="Enter Qualification">
                @*   <span asp-validation-for=""></span> *@
            </div>

            <div class="mb-3">
@*                     <label asp-for="td.experience" class="form-label text-secondary fw-bolder">Experience</label>
 *@                <input asp-for="td.experience" class="form-control" placeholder="Enter Experience">
                @*   <span asp-validation-for=""></span> *@
            </div>
            <div>
                @foreach (var admin in Model.clgadmins)
                {
                        <label asp-for="td.college_id" class="form-label text-secondary fw-bolder">College-Id</label>
                    <input type="text" style="width:470px;" class="form-control"  value=" @admin.college_id" disabled />
                }
            </div><br />
            @foreach (var s in Model.streamofclgs)
            {
                <input type="hidden" name="StreamId" value="@s.stream_id" />

            }
            <div>
                <button type="submit" asp-page-handler="TeacherDetails" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>


    <!----------------------------view teachers-------------------------------------->
   
        <div id="viewteachersstream" style="display:none; box-shadow: 2px 2px 20px black; margin-top:100px; gap:5px;" class="border border-dark p-3">
            <div class="d-flex">
                @{

                    @foreach (var sc in Model.streamofclgs)
                    {
                        <div class="selectbranchforteacher" data-stream-id="@sc.stream_id">
                            <div class="  btn btn-primary mx-3 fw-bold" value="@sc.stream_id">@sc.stream_name</div>
                        </div>
                    }
                }
            </div>


        </div>



        <div id="teachersinthisbranch" style="display:none;">
                <table class=" border border-primary table table-dark table-hover">
                <thead>
                    <tr>

                        <th> Name</th>
                        <th>Email</th>
                        <th>Qualification</th>
                        <th>Experience</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fi in Model.faculties)

                    {
                        <tr class="teacher-row" data-stream-id="@fi.stream_id">
                            <td>@fi.fac_name </td>
                            <td>@fi.fac_email</td>
                            <td>@fi.qualification</td>
                            <td>@fi.experience</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

</div>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/sidebar.js"></script>
</body>