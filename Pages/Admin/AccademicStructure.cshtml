@page
@model ERP_System.Pages.Admin.AccademicStructureModel
@{
    Layout = "_AdminLayout";
}
 @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"> *@

<head>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body style="background-color: #f8f9fa; ">

    <nav class="top-navbar">

        <div class="nav-item" style="padding: 5px; border: 2px solid #000; border-radius: 8px; width: fit-content; background-color: #f8f9fa;">
            <select class="form-select custom-select-arrow btn btn-dark text-primary" id="branch-select">
                Students
                <option class="text-primary" value="" disabled selected>Branch</option>
                <option class="text-primary" value="add-branch">Add Branch</option>
                <option class="text-primary" value="view-branch">View Branch</option>
            </select>
        </div>
    </nav>


    <div style=" width:500px; margin-left:400px; margin-top:150px;">
        
   <!-- Add Branch Section -->
        <form method="post">
            <div id="addbranch" style=" display: none; border: 2px solid #000; border-radius: 8px; background-color: #f8f9fa; gap:50px;">
                <button type="button" id="addbranchbtn" class="btn btn-primary mb-3 mt-3 mx-5 ">Create Branch</button>
                <div stye="width:100px;" class="mx-5" id="textbox-container"></div>
            <button type="submit" id="branchsavebutton" asp-page-handler="SendBranchDetails" class="btn btn-primary mx-5 mt-3 mb-3">Save Branch</button>
         
        </div>
        </form>

        <!-- View Branch Section -->
        <div id="viewbeanch" style="display: none; border: 2px solid #000; border-radius: 8px; background-color: #f8f9fa;">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Branches Available</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.stream)
                    {
                        <form method="post">
                        <tr>
                            <td>@s.stream_name</td>
                            <td>
                                <button asp-page-handler="DeleteBranch" asp-route-stream_id="@s.stream_id" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                        </form>
                    }
                </tbody>
            </table>
        </div> 
           
 </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/sidebar.js"></script>
</body>


