@page
@model ERP_System.Pages.SuperAdmin.DashboardModel
@{
   
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<body style="background-color: #f8f9fa;">
    <div class=" d-flex">
        <nav class="bg-dark text-white flex-shrink-0 p-0" style="width: 250px; height: 100vh;">
            <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-cogs me-2"></i>
                <span class="fs-4">Admin Dashboard</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link text-white active" aria-current="page">
                        <i class="fas fa-home me-2"></i> Home
                    </a>
                </li>
                <li>
                    <a href="/SuperAdmin/ClientView" class="nav-link text-white">
                        <i class="fas fa-user me-2"></i> Users
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                        <i class="fas fa-chart-line me-2"></i> Analytics
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                        <i class="fas fa-cogs me-2"></i> Settings
                    </a>
                </li>
                <li>
                    <a href="/Index" class="nav-link text-white">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
            <hr>
            <div class="text-center">
                <p>&copy; 2024 Admin</p>
            </div>
        </nav>

      
        <div class="flex-grow-1 p-3">
            <div class="container">
                <h1 class="mb-4">Welcome, Admin!</h1>

               
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text fs-3">@Model.count</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Revenue</h5>
                                <p class="card-text fs-3">$25,400</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-danger mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Pending Requests</h5>
                                <p class="card-text fs-3">17</p>
                            </div>
                        </div>
                    </div>
                </div>

               
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        Recent Activities
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Activity</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>User login</td>
                                    <td>10:30 AM</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Database backup</td>
                                    <td>10:00 AM</td>
                                    <td><span class="badge bg-warning">Pending</span></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>New user registration</td>
                                    <td>9:45 AM</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>




