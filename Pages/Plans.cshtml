@page
@model ERP_System.Pages.PlansModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">

</head>
<body>

    <div class="image-container">
         <img src="~/Images/img/frontpage.jpg" alt="Alternate Text" />

        <h3 class="subscription-quote">Don’t wait! Choose a plan that suits your needs and unlock a world of opportunities.</h3>
        @* -------------------------------subscription------------------------- *@

        <div class="subscription-container d-flex " id="subpack" >

            <div class="subscription-pack">
                <h2>Basic Plan</h2>
                <p class="price">$9.99 / month</p>
                <ul>
                    <li>1 User</li>
                    <li>5GB Storage</li>
                    <li>Email Support</li>
                </ul>
                <form method="post">
                    <button class="subscribe-btn btn-danger" asp-for="basic" asp-page-handler="Basic" id="base">Subscribe</button>
                </form>
            </div>

            <div class="subscription-pack featured" id="st">
                <h2>Standard Plan</h2>
                <p class="price">$19.99 / month</p>
                <ul>
                    <li>5 Users</li>
                    <li>50GB Storage</li>
                    <li>Priority Support</li>
                </ul>
                <form method="post">
                    <button class="subscribe-btn btn-danger" asp-page-handler="Standard" id="std" >Subscribe</button>
                </form>
            </div>

            <div class="subscription-pack" id="pm">
                <h2>Premium Plan</h2>
                <p class="price">$29.99 / month</p>
                <ul>
                    <li>Unlimited Users</li>
                    <li>200GB Storage</li>
                    <li>24/7 Support</li>
                </ul>
                <form method="post">
                    <button class="subscribe-btn btn-danger" asp-page-handler="Premium" id="prem">Subscribe</button>
                </form>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

     @* <script>
         $(document).ready(function () {
             $("#base").on('click', function () {
                 $("#st").hide();
                 $("#pm").hide();


             });
         });
     </script> *@
   
</body>
</html>
